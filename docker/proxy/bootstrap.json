{
  "admin": {
    "listen": "0.0.0.0:2019"
  },
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [":80"],
          "routes": [
            {
              "match": [{ "path": ["/healthz"] }],
              "handle": [
                {
                  "handler": "static_response",
                  "status_code": 200,
                  "body": "ok"
                }
              ],
              "terminal": true
            },
            {
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [{ "dial": "app:3000" }]
                }
              ],
              "terminal": true
            }
          ]
        }
      }
    }
  }
}
